<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dk_ll_toolsdetail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/dk_layout_progress_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/dk_common_progress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dk_layout_net_error_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/dk_iv_network_error_tool"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/dk_ic_network_info" />

        <TextView
            android:id="@+id/dk_tv_network_error_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/dk_tip_payment_network_error"
            android:textColor="@color/dk_color_333333"
            android:textSize="@dimen/text_size_16_sp" />

        <Button
            android:id="@+id/dk_btn_history_retry_tool"
            android:layout_width="320dp"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/dk_payment_btn_pay_selector"
            android:gravity="center"
            android:text="@string/dk_retry"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_16_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dk_layout_data_error_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/dk_iv_data_fail_load_tool"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/dk_ic_failed_load" />

        <TextView
            android:id="@+id/dk_tv_data_fail_load_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/dk_tip_history_retry_load"
            android:textColor="@color/dk_color_2764af"
            android:textSize="@dimen/text_size_16_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dk_layout_recharge_no_history_tool"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:src="@drawable/dk_ic_recharge_no_recode" />

        <include
            android:id="@+id/dk_custom_bottom0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            layout="@layout/dk_user_bottom_logo"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_cashcard_introduce"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/dk_btn_tooldetail_introduce_selsetor"
            android:text="@string/dk_voucher_explanation"
            android:textColor="#b06b05"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <com.duoku.platform.view.MultiGridView
        android:id="@+id/lv_tooldetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:horizontalSpacing="3dp"
        android:numColumns="1"
        android:verticalSpacing="3dp"
        android:visibility="gone" />

</LinearLayout>