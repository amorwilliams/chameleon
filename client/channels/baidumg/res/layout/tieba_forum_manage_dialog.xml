<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:orientation="vertical"
    android:background="@drawable/tieba_floating_bg"	
	android:layout_height="wrap_content">
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:textSize="16dip"
        android:textColor="#ff262626"
        android:text="@string/tieba_forum_manage"/>
    
    <Button 
        android:id="@+id/del_post_btn"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="16dip"
        android:textSize="18dip"
        android:textColor="@color/tieba_text_black_white_color"
        android:gravity="center"
        android:text="@string/tieba_delete_thread"
        android:background="@drawable/tieba_btn_wb_square"
        />
    
    <Button 
        android:id="@+id/forbid_user_btn"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:textSize="18dip"
        android:textColor="@color/tieba_text_black_white_color"
        android:gravity="center"
        android:text="@string/tieba_ban_user"
        android:background="@drawable/tieba_btn_wb_square"
        />
</LinearLayout>