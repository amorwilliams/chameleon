<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/container">
	
	<ScrollView 
	    android:layout_below="@+id/title"
	    android:layout_height="fill_parent" 
		android:layout_width="fill_parent">
		<LinearLayout 
	        android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:paddingBottom="15dip"
			android:paddingRight="8dip"
			android:paddingLeft="8dip"
			android:orientation="vertical">
			
		    <TextView 
	            android:id="@+id/text_error"
	            android:drawableLeft="@drawable/tieba_login_error"
	            android:textColor="#FFE00000"
	            android:visibility="invisible"
	            android:paddingTop="2dip"
	            android:gravity="center_vertical"
	            android:layout_width="wrap_content"
	            android:layout_height="25dip"
	            android:textSize="14sp"
	            android:singleLine="true"/>
		    
		    <!-- 用户名 -->
			<LinearLayout 
			    android:id="@+id/user_name_bg"
			    android:background="@drawable/tieba_login_input_top"
			    android:paddingLeft="13dip"
		    	android:paddingRight="10dip"
			    android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
				<TextView 
				    android:id="@+id/user_name"
	                android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_marginRight="16dip"
					android:paddingTop="12dip"
		    		android:paddingBottom="12dip"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="16sp"
					android:text="@string/tieba_user"
					android:layout_gravity="center_vertical">
				</TextView>
			    <EditText 
			        android:id="@+id/edit_user_name"
			        android:layout_gravity="center_vertical"
					android:singleLine="true"
					android:hint="@string/tieba_user_name_rule"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="14sp"
					android:background="@null"
					android:inputType="text"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1">
				</EditText>
				<ImageView 
				    android:id="@+id/del_user_name"
				    android:padding="6dip"
				    android:visibility="gone"
				    android:layout_gravity="center_vertical"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:clickable="true"
					android:src="@drawable/tieba_home_search_quit"
					android:background="@null">
				</ImageView>
			</LinearLayout>
		    
		    <!-- 推荐 -->
		    <LinearLayout 
		        android:id="@+id/recommend_bg"
				android:visibility="gone"
		        android:orientation="vertical"
		        android:paddingLeft="13dip"
		    	android:paddingRight="10dip"
		        android:background="@drawable/tieba_login_input_middle"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
		        <TextView 
	                android:id="@+id/choose_info"
	                android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="14sp"
					android:paddingTop="12dip"
					android:text="@string/tieba_choose_user_name"
					android:layout_gravity="center_vertical">
				</TextView>
				<RadioGroup 
				    android:id="@+id/name_group"
				    android:paddingBottom="12dip"
				    android:layout_height="wrap_content"
					android:layout_width="fill_parent">
				    <RadioButton 
				        android:id="@+id/choose_name1"
				        android:layout_marginTop="12dip"
				        android:layout_height="wrap_content"
						android:layout_width="fill_parent"
				        android:textSize="14sp"
				        android:background="@android:color/transparent"
				        android:paddingLeft="24dip"
				        android:button="@drawable/tieba_check_button"
				        android:textColor="@color/tieba_reg_font_color"/>
				    <RadioButton
				        android:id="@+id/choose_name2"
				        android:layout_marginTop="12dip"
				        android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:textSize="14sp"
						android:background="@android:color/transparent"
						android:paddingLeft="24dip"
				        android:button="@drawable/tieba_check_button"
				        android:textColor="@color/tieba_reg_font_color"/>
				    <RadioButton
				        android:id="@+id/choose_name3"
				        android:layout_marginTop="12dip"
				        android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:background="@android:color/transparent"
						android:paddingLeft="24dip"
						android:textSize="14sp"
				        android:button="@drawable/tieba_check_button"
				        android:textColor="@color/tieba_reg_font_color"/>
				</RadioGroup>
		    </LinearLayout>
		    
		    <!-- 密码 -->
			<LinearLayout 
			    android:id="@+id/input_psw_bg"
			    android:orientation="horizontal"
			    android:paddingLeft="13dip"
			    android:paddingRight="10dip"
			    android:gravity="center_vertical"
			    android:background="@drawable/tieba_login_input_middle"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
				<TextView 
	                android:layout_alignParentLeft="true"
	                android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="16sp"
					android:paddingTop="12dip"
		    		android:paddingBottom="12dip"
					android:layout_marginRight="16dip"
					android:text="@string/tieba_psw_tip">
				</TextView>
			    <EditText 
			        android:id="@+id/edit_psw"
			        android:layout_marginRight="16dip"
					android:singleLine="true"
					android:textColor="@color/tieba_reg_font_color"
					android:hint="@string/tieba_user_psw_rule"
					android:textSize="14sp"
					android:maxLength="14"
					android:background="@null"
					android:password="true"
       	  	        android:inputType="textPassword"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1">
				</EditText>
				<Button 
				    android:id="@+id/show"
				    android:text="@string/tieba_hide"
				    android:background="@drawable/tieba_show_psw"
				    android:textColor="@color/tieba_reg_font_color"
				    android:layout_height="wrap_content"
					android:layout_width="wrap_content">
				</Button>
			</LinearLayout>
		    
			<!-- 手机号 -->
			<LinearLayout 
			    android:id="@+id/input_phone_bg"
			    android:background="@drawable/tieba_login_input_middle"
			    android:layout_height="wrap_content"
			    android:paddingLeft="13dip"
			    android:paddingRight="10dip"
				android:layout_width="fill_parent">
			    <TextView 
	                android:layout_height="wrap_content"
	                android:layout_marginRight="16dip"
					android:layout_width="wrap_content"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="16sp"
					android:paddingTop="12dip"
		    		android:paddingBottom="12dip"
					android:text="@string/tieba_account_mobile"
					android:layout_gravity="center_vertical">
				</TextView>
			    <EditText 
			        android:id="@+id/edit_phone"
			        android:phoneNumber="true"
			        android:layout_gravity="center_vertical"
					android:singleLine="true"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="14sp"
					android:background="@null"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1">
				</EditText>
				<ImageView 
				    android:id="@+id/del_phone"
				    android:padding="6dip"
				    android:visibility="gone"
				    android:layout_gravity="center_vertical"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:clickable="true"
					android:src="@drawable/tieba_home_search_quit"
					android:background="@null">
				</ImageView>
			</LinearLayout>
			
			<!-- 验证码 -->
			<LinearLayout 
			    android:visibility="gone"
			    android:id="@+id/input_vcode_bg"
			    android:background="@drawable/tieba_login_input_under"
			    android:layout_height="wrap_content"
			    android:paddingLeft="13dip"
			    android:paddingRight="10dip"
				android:layout_width="fill_parent">
			    <TextView 
	                android:layout_height="wrap_content"
	                android:layout_marginRight="16dip"
					android:layout_width="wrap_content"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="16sp"
					android:paddingTop="12dip"
		    		android:paddingBottom="12dip"
					android:text="@string/tieba_title_vcode"
					android:layout_gravity="center_vertical">
				</TextView>
			    <EditText 
			        android:id="@+id/edit_vcode"
			        android:layout_gravity="center_vertical"
					android:singleLine="true"
					android:textColor="@color/tieba_reg_font_color"
					android:textSize="14sp"
					android:background="@null"
					android:layout_height="fill_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1">
				</EditText>
				<FrameLayout 
				    android:layout_marginLeft="5dip"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content">
		            <ImageView 
		                android:id="@+id/image_vcode"
		                android:layout_height="40dip"
						android:layout_width="100dip"
						android:clickable="true"
						android:scaleType="fitCenter"
						android:background="@drawable/tieba_background"/>
		            <ProgressBar 
						android:id="@+id/image_progress"
						android:visibility="gone"
						android:indeterminateDrawable="@drawable/tieba_login_progressbar"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:layout_gravity="center"
						style="?android:attr/progressBarStyleSmall"/>
				</FrameLayout>
				<Button 
				    android:id="@+id/change_vcode"
				    android:text="@string/tieba_change_vcode"
				    android:layout_gravity="center_vertical"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_marginLeft="5dip"
					android:background="@null">
				</Button>
			</LinearLayout>
			
			<!-- 注册 -->
			<RelativeLayout 
			    android:id="@+id/register" 
				android:layout_height="46dp"
				android:layout_width="fill_parent"
				android:layout_marginTop="10dip"
				android:clickable="true"
				android:background="@drawable/tieba_login_bg">
	            <ProgressBar
	                android:id="@+id/progress_reg"
	                android:layout_centerVertical="true"
	                android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:indeterminateDrawable="@drawable/tieba_login_progressbar"
					android:visibility="gone"
					android:layout_marginRight="5dip"
					android:layout_toLeftOf="@+id/reg_text"
					style="?android:attr/progressBarStyleSmall"/>
				<TextView 
				    android:id="@+id/reg_text"
					android:textSize="16sp"
					android:layout_centerInParent="true"
				    android:textColor="@android:color/white"
				    android:text="@string/tieba_account_regedit"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"/>
			</RelativeLayout>
			
			<!-- 协议 -->
		    <TextView 
		        android:layout_marginTop="14dip"
		        android:id="@+id/reg_info"
		        android:textColor="@color/tieba_reg_font_color"
		        android:textSize="14sp"
		        android:textColorLink="#FF63A2D2"
                android:visibility="gone"
		        android:text="@string/tieba_reg_info"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"/>
		    
		</LinearLayout>
	</ScrollView>
	<LinearLayout 
		android:id="@+id/title" 
		style="@style/title_margin"
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView 
			android:id="@+id/back" 
			style="@style/comm_controls"
			android:layout_gravity="center_vertical"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</ImageView>
		<TextView 
	        android:id="@+id/title_text"
			android:text="@string/tieba_account_regedit_baidu" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"  
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center"
			style="@style/title_info_shadow"
			android:singleLine="true">
		</TextView>
		<Button 
			android:id="@+id/login"
			android:text="@string/tieba_account_login"
			style="@style/title_comm"
			android:layout_gravity="center_vertical">
		</Button>
	</LinearLayout>
</RelativeLayout>