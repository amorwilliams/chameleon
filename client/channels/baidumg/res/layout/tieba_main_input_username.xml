<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dip"
    android:paddingLeft="9dip"
    android:paddingRight="9dip"
    android:paddingBottom="0dip"
    android:orientation="vertical">
    <ScrollView
        android:fadingEdge="none"
        android:background="@drawable/tieba_input_name_bg"
	    android:paddingTop="5dip"
	    android:paddingBottom="5dip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="11dip"
	    	android:paddingRight="11dip"
	    	android:paddingTop="15dip"
	    	android:paddingBottom="5dip"
		    android:orientation="vertical">	
		    <TextView
		        android:id="@+id/phone_info"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dip"
		        android:textSize="16sp"
		        android:textColor="#FF505050">
		    </TextView>
		    
		    <TextView
		        android:textSize="13sp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="25dip"
		        android:textColor="#FF505050"
		        android:text="@string/tieba_input_username_info">
		    </TextView>
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:gravity="center_vertical"
		    	android:layout_marginBottom="10dip">
		        <EditText
		            android:id="@+id/account"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_marginRight="5dip"
			    	android:textSize="13sp"
			    	android:layout_weight="1"
			    	android:textColor="@color/tieba_black"
			    	android:textColorHint="@color/tieba_text_hint_color"
			    	android:padding="9dip"
			    	android:background="@drawable/tieba_input_box_name_bg"
			    	android:singleLine="true">
		    	</EditText>
		    	<FrameLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content">
			    	<Button 
			    	    android:id="@+id/check_username"
			    	    android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="@color/tieba_white"
				    	android:textSize="13sp"
				    	android:padding="9dip"
				    	android:background="@drawable/tieba_check_name_button_bg"
				    	android:text="@string/tieba_check_username">
			    	</Button>
			    	<ProgressBar 
						android:id="@+id/check_progress"
						android:visibility="gone"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:indeterminateDrawable="@drawable/tieba_progressbar"
						android:layout_gravity="center"
						style="?android:attr/progressBarStyleSmall">
					</ProgressBar>
			    </FrameLayout>
		    </LinearLayout>
		    <TextView
		        android:id="@+id/error_info"
		        android:textSize="13sp"
		        android:visibility="gone"
		        android:layout_marginBottom="10dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#FFFF6D6D">
		    </TextView>
	
		    <RadioGroup
		        android:id="@+id/names_group"
		        android:orientation="horizontal"
		        android:visibility="visible"
		        android:layout_marginBottom="10dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
	
		        <RadioButton
		            android:id="@+id/name1"
		            android:background="@android:color/transparent"
		            android:layout_weight="1.0"
		            android:button="@drawable/tieba_check_button"
		            android:layout_marginRight="5dip"
		            android:paddingLeft="24dip"
		            android:textSize="13sp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textColor="#FF3B3B3B"/>
	
		        <RadioButton
		            android:id="@+id/name2"
		            android:background="@android:color/transparent"
		            android:layout_weight="1.0"
		            android:button="@drawable/tieba_check_button"
		            android:paddingLeft="24dip"
		            android:textSize="13sp"
		            android:layout_marginLeft="5dip"
		            android:layout_marginRight="5dip"
		            android:textColor="#FF3B3B3B"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"/>
	
		        <RadioButton
		            android:id="@+id/name3"
		            android:background="@android:color/transparent"
		            android:layout_weight="1.0"
		            android:button="@drawable/tieba_check_button"
		            android:paddingLeft="24dip"
		            android:layout_marginLeft="5dip"
		            android:textSize="13sp"
		            android:textColor="#FF3B3B3B"
		            android:nextFocusRight="@+id/confirm"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"/>
		    </RadioGroup>
	
		    <LinearLayout 
		        android:layout_marginTop="10dip"
		        android:orientation="horizontal"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
			    <FrameLayout 
			        android:layout_weight="1"
			        android:layout_marginRight="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
			        <Button 
			            android:id="@+id/confirm"
			            android:background="@drawable/tieba_search_bt_background"
		            	android:textColor="#ff3b3b3b"
						android:textSize="14sp"
						android:padding="9dip"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:text="@string/tieba_confirm">
			    	</Button>
			    	<ProgressBar 
						android:id="@+id/confirm_progress"
						android:visibility="gone"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:indeterminateDrawable="@drawable/tieba_progressbar"
						android:layout_gravity="center"
						style="?android:attr/progressBarStyleSmall">
					</ProgressBar>
			    </FrameLayout>
			    <Button 
		            android:id="@+id/back"
		            android:background="@drawable/tieba_search_bt_background"
		            android:textColor="#ff3b3b3b"
		            android:padding="9dip"
					android:textSize="14sp"
					android:layout_marginLeft="5dip"
		            android:layout_weight="1"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/tieba_back">
		    	</Button>
		    </LinearLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>