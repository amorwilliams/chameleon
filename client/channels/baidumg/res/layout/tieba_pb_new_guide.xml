<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/pb_new_guide"
    android:clickable="true"
    android:background="#BB000000" >
    <ImageView 
        android:id="@+id/guide_see_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="76dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/tieba_guide_pb_see_main">
    </ImageView>
    <ImageView 
        android:id="@+id/guide_pb_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="22dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/tieba_guide_pb_more">
    </ImageView>
    <ImageView 
        android:id="@+id/guide_pb_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:src="@drawable/tieba_guide_pb_post">
    </ImageView>
</FrameLayout>
