<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dk_ll_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/dk_rl_point_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/dk_rl_point_top" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/dk_mypoint"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dk_tv_mypoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textSize="35sp" />
    </RelativeLayout>

    <com.duoku.platform.view.MultiGridView
        android:id="@+id/dk_point_message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/dk_layout_point_no_history"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:src="@drawable/dk_point_nohistory" />

        <include
            android:id="@+id/dk_custom_bottom0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            layout="@layout/dk_user_bottom_logo"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>