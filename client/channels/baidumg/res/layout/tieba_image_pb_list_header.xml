<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tieba_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="4dip">

        <com.baidu.tiebasdk.view.ImagePbImageView
            android:id="@+id/image_pb_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.baidu.tiebasdk.view.CustomTextView
        android:id="@+id/image_pb_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dip"
        android:paddingLeft="9dip"
        android:paddingRight="9dip"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/seg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="7dip"
        android:layout_marginBottom="11dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/image_pb_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:gravity="left"
            android:paddingLeft="9dip"
            android:textColor="#ff6793da"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/image_pb_reply_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/tieba_icon_comment_gray"
            android:drawablePadding="4dip"
            android:gravity="right"
            android:paddingRight="9dip"
            android:textColor="#ff999999"
            android:textSize="11sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>