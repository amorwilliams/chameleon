<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:id="@+id/lv_point_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/lv_point_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lv_point_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:text="@string/dk_only_show_three_mounth"
            android:textColor="#666666"
            android:textSize="16sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/lv_point_item_bg" >

        <TextView
            android:id="@+id/lv_point_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:textColor="#67b64b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lv_point_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lv_point_amount"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>