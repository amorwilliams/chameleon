<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@drawable/tieba_bg_bottom_bar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pb_button_camera"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:scaleType="centerCrop" />
		
        <Button
            android:id="@+id/pb_button_at"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/reply_content"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tieba_foot_bar_input"
            android:hint="@string/tieba_pb_reply_hint"
            android:maxLines="4"
            android:paddingLeft="9dip"
            android:paddingRight="9dip"
            android:textColorHint="#A5A6A8"
            android:layout_marginLeft="3dip"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pb_reply_post"
            android:text="@string/tieba_send_post"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:enabled="false"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/tieba_btn_pb_blue_bar">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/extern"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/tieba_bg_bottom_bar_drop"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/pb_button_camera1"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_marginLeft="5dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dip"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/pb_button_at1"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dip" />
    </LinearLayout>

</LinearLayout>