    <style name="sidebar_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">18dip</item>
	</style>
	
    <style name="sidebar_radiobtn_1" mce_bogus="1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c9c9c9</item>
 		<item name="android:button">@null</item> 
 		<item name="android:paddingLeft">18dip</item>
    	<item name="android:background">@drawable/tieba_radio_button_bg</item>
    	<item name="android:gravity">center_vertical</item> 
