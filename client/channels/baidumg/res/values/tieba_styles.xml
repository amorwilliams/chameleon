    <style name="sidebar_title_1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#494a4b</item>
        <item name="android:paddingLeft">18dip</item>
        <item name="android:background">@drawable/tieba_frs_sidebar_title</item>
