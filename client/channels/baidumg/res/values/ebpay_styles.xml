        <!-- <item name="android:taskToBackExitAnimation">@android:anim/slide_out_right</item> -->
    </style>
    
    <style name="EbpayActivityAnim2">
        <item name="@android:activityOpenEnterAnimation">@anim/ebpay_show_dialog_anim</item>
        <item name="@android:activityOpenExitAnimation">@anim/ebpay_dismiss_dialog_anim</item>
        <item name="@android:activityCloseEnterAnimation">@anim/ebpay_show_dialog_anim</item>
        <item name="@android:activityCloseExitAnimation">@anim/ebpay_dismiss_dialog_anim</item>
    </style>

    <style name="EbpayThemeActivityBase" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:windowAnimationStyle">@style/EbpayActivityAnim</item>
        <item name="android:textSize">15sp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="EbpayThemeActivit" parent="EbpayThemeActivityBase">
        <item name="android:windowBackground">@color/ebpay_gray</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="EbpayThemeActivitTranslucent" parent="EbpayThemeActivityWelcome">
        <item name="android:windowAnimationStyle">@style/EbpayActivityAnim2</item>
    </style>
    <style name="EbpayThemeActivityWelcome" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="EbpayPromptDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@color/ebpay_black</item>
        <item name="android:windowBackground">@color/ebpay_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/ebpay_transparent</item>
    </style>

    <style name="EditCommonStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/ebpay_text_size_15</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/ebpay_6c</item>
    </style>
    <style name="EbpayCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ebpay_bg_checkbox_seletor</item>
    </style>
</resources>